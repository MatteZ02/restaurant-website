{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["esnext"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["public", "build", "node_modules"],
    "include": ["src"]
}
